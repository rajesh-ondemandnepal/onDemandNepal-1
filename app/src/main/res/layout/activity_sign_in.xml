<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/upper"
        android:layout_height="0dp"
        android:layout_weight="0.25">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:layout_margin="25dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="-40dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="25dp"
        android:layout_height="0dp"
        android:layout_weight="0.75">



        <!-- Email Label -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="70dp"
            android:id="@+id/login_activity_Etemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:hint=" Phone Number Or Email"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Label -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_activity_Etpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:hint="Password"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/login_activity_Tvforgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget your password"
            android:layout_marginTop="30dp"
            android:textStyle="normal"
            android:layout_gravity="center_horizontal"/>


        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/login_activity_Btnlogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:text="Sign in">

        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

</LinearLayout>